{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": ".",
        "outDir": ".",
        "module": "commonjs",
        "removeComments": true,
        "target": "ES6",
        "moduleResolution": "node",
        "lib": ["ES2015", "es5", "es6", "dom", "ScriptHost"],
        "preserveConstEnums": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
